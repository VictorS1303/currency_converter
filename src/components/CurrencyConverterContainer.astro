---
import CurrencySelectContainer from './CurrencySelectContainer.astro'
---

<div class="container currency-converter-container">
    <CurrencySelectContainer/>
</div>

<style>
    .container.currency-converter-container
    {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        height: 500px;
        width: 500px;
        border-radius: var(--base-border-radius);
        background-color: var(--currency-converter-background-color);
        box-shadow: var(--box-shadow);
    }
</style>